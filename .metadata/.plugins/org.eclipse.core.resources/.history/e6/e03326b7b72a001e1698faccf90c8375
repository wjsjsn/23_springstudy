<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- spring annotation : 
	    xml에서 작성한 내용을
		코딩을 작성하는 과정 중 annotation을 이용해서 작성
	
		- 일반적인 클래스를 객체로 만들 때 사용하는 annotation
		    @Component : 가장 상위 클래스
		  	@Service : 비지니스 로직을 처리하는 클래스에 사용(Service 클래스)
		  	@Repository : 데이터 베이스 연동 처리하는 DAO 클래스에서 사용
		  	@Controller : mvc 패턴 중 컨트롤러 클래스에 사용
	-->  
	<!-- Annotation 지정 방법 -->
	<!-- 
		1. Namespaces에 가서 context 선택
	 -->
</beans>
